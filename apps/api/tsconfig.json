{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@modules/*": ["./modules/*"],
      "@plugins/*": ["./plugins/*"],
      "@middleware/*": ["./middleware/*"],
      "@lib/*": ["./lib/*"],
      "@jobs/*": ["./jobs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
