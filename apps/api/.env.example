# RealRiches API Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Server
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/realriches?schema=public
# Direct URL for Prisma (optional, for connection pooling setups)
# DIRECT_URL=postgresql://user:password@localhost:5432/realriches?schema=public

# JWT Authentication (RS256)
# Generate keys with: ssh-keygen -t rsa -b 4096 -m PEM -f jwt.key
# Private key (PKCS#8 format)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----"

# Public key (SPKI format)
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
YOUR_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"

JWT_ISSUER=realriches
JWT_AUDIENCE=realriches-api
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Redis Cache (optional - caching disabled if not provided)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# INTEGRATIONS (Optional - features disabled if not configured)
# =============================================================================

# SendGrid (Email)
# SENDGRID_API_KEY=SG.xxxx
# SENDGRID_FROM_EMAIL=noreply@realriches.com
# SENDGRID_FROM_NAME=RealRiches

# Twilio (SMS/Voice)
# TWILIO_ACCOUNT_SID=ACxxxx
# TWILIO_AUTH_TOKEN=xxxx
# TWILIO_PHONE_NUMBER=+1234567890
# TWILIO_VERIFY_SID=VAxxxx

# Sendblue (iMessage)
# SENDBLUE_API_KEY=xxxx
# SENDBLUE_API_SECRET=xxxx

# Seam (Smart Locks)
# SEAM_API_KEY=xxxx

# TheGuarantors (Rent Guarantee)
# THE_GUARANTORS_API_KEY=xxxx
# THE_GUARANTORS_PARTNER_ID=xxxx
# THE_GUARANTORS_API_URL=https://api.theguarantors.com/v1

# Jeeva.ai (AI Lead Follow-up)
# JEEVA_API_KEY=xxxx

# Anthropic (AI Enhancements)
# ANTHROPIC_API_KEY=sk-ant-xxxx
