# RealRiches API Environment Variables

NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database - PostgreSQL with PostGIS
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/realriches?schema=public
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/realriches?schema=public

# Redis (optional for development)
# REDIS_URL=redis://localhost:6379

# JWT Configuration (ES256 keys - base64 encoded PEM files)
# Generate with: openssl ecparam -name prime256v1 -genkey -noout | base64 -w 0
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=
JWT_ISSUER=realriches
JWT_AUDIENCE=realriches-api
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Optional Integrations
# SENDGRID_API_KEY=
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
# SENDBLUE_API_KEY=
# SENDBLUE_API_SECRET=
# SEAM_API_KEY=
# THEGUARANTORS_API_KEY=
# JEEVA_API_KEY=
# ANTHROPIC_API_KEY=
