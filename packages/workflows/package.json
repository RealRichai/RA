{
  "name": "@realriches/workflows",
  "version": "1.0.0",
  "private": true,
  "description": "Durable workflow foundation for long-running processes (Temporal-ready)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
