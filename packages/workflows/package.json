    "test:watch": "vitest"
  },
  "dependencies": {
    "@realriches/database": "workspace:*",
    "@realriches/config": "workspace:*",
    "ioredis": "^5.3.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
