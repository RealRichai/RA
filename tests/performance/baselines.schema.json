{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Performance Baselines",
  "description": "Configuration for k6 performance test baselines",
  "type": "object",
  "required": ["version", "thresholds", "regressionThreshold", "smokeConfig"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "updated": {
      "type": "string",
      "format": "date"
    },
    "approvedBy": {
      "type": "string"
    },
    "note": {
      "type": "string"
    },
    "thresholds": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["p95", "p99", "maxFailRate"],
        "properties": {
          "p95": { "type": "number", "minimum": 0 },
          "p99": { "type": "number", "minimum": 0 },
          "maxFailRate": { "type": "number", "minimum": 0, "maximum": 1 },
          "description": { "type": "string" }
        }
      }
    },
    "regressionThreshold": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Percentage increase that triggers failure (0.20 = 20%)"
    },
    "smokeConfig": {
      "type": "object",
      "required": ["vus", "duration"],
      "properties": {
        "vus": { "type": "integer", "minimum": 1 },
        "duration": { "type": "string" },
        "iterations": { "type": "integer" }
      }
    },
    "loadConfig": {
      "type": "object",
      "properties": {
        "stages": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["duration", "target"],
            "properties": {
              "duration": { "type": "string" },
              "target": { "type": "integer" }
            }
          }
        }
      }
    }
  }
}
