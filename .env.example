# =============================================================================
# RealRiches Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=RealRiches
APP_VERSION=1.0.0
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=4000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Web Frontend
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/realriches?schema=public
DATABASE_POOL_SIZE=20
DATABASE_SSL=false

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# -----------------------------------------------------------------------------
# Session & Security
# -----------------------------------------------------------------------------
SESSION_SECRET=your-session-secret-key-min-32-chars
COOKIE_DOMAIN=localhost
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# Encryption (AES-256-GCM for data at rest)
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=your-32-byte-encryption-key-here
ENCRYPTION_IV_LENGTH=16

# -----------------------------------------------------------------------------
# Stripe (Payments)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# -----------------------------------------------------------------------------
# Plaid (Banking/ACH)
# -----------------------------------------------------------------------------
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-xxx
OPENAI_ORG_ID=org-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
AI_MODEL_PRIMARY=gpt-4-turbo
AI_MODEL_FAST=gpt-3.5-turbo
AI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# AWS / S3 (Document Storage)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=xxx
S3_BUCKET=realriches-documents
S3_BUCKET_PUBLIC=realriches-public
CLOUDFRONT_URL=https://cdn.realriches.com

# -----------------------------------------------------------------------------
# Email (SendGrid/SES)
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.xxx
EMAIL_FROM=noreply@realriches.com
EMAIL_FROM_NAME=RealRiches

# -----------------------------------------------------------------------------
# SMS (Twilio)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# Third-Party Integrations
# -----------------------------------------------------------------------------
# LeaseLock (Deposit Replacement)
LEASELOCK_API_KEY=xxx
LEASELOCK_API_URL=https://api.leaselock.com/v1

# Rhino (Deposit Replacement Alternative)
RHINO_API_KEY=xxx
RHINO_API_URL=https://api.sayrhino.com/v1

# Lemonade (Renters Insurance)
LEMONADE_API_KEY=xxx
LEMONADE_PARTNER_ID=xxx

# The Guarantors
GUARANTORS_API_KEY=xxx
GUARANTORS_API_URL=https://api.theguarantors.com/v1

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_ENVIRONMENT=development
DD_API_KEY=xxx
DD_APP_KEY=xxx

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_FLAG_PROVIDER=local
LAUNCHDARKLY_SDK_KEY=sdk-xxx

# -----------------------------------------------------------------------------
# Market Configuration
# -----------------------------------------------------------------------------
DEFAULT_MARKET=NYC
ENABLED_MARKETS=NYC,LA,SF,CHI,MIA,ATL

# -----------------------------------------------------------------------------
# Compliance
# -----------------------------------------------------------------------------
COMPLIANCE_STRICT_MODE=true
FARE_ACT_ENABLED=true
FCHA_ENABLED=true
GOOD_CAUSE_ENABLED=true

# -----------------------------------------------------------------------------
# Background Jobs
# -----------------------------------------------------------------------------
BULL_QUEUE_PREFIX=realriches
JOB_CONCURRENCY=5
JOB_RETENTION_DAYS=30
