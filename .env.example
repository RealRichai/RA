# ===========================================
# RealRiches Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Required fields are marked with [REQUIRED]

# ===========================================
# Database [REQUIRED]
# ===========================================
DATABASE_URL=postgresql://realriches:realriches@localhost:5432/realriches
DIRECT_URL=postgresql://realriches:realriches@localhost:5432/realriches

# ===========================================
# Redis [REQUIRED]
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT Authentication [REQUIRED]
# Generate secrets with: openssl rand -base64 32
# ===========================================
JWT_ACCESS_SECRET=change-this-to-a-secure-random-string
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===========================================
# Application URLs [REQUIRED]
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
APP_URL=http://localhost:3000

# ===========================================
# Admin User (for seeding)
# ===========================================
ADMIN_EMAIL=admin@realriches.com
ADMIN_PASSWORD=RealRichesAdmin2024!

# ===========================================
# Email - SendGrid
# https://docs.sendgrid.com
# ===========================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@realriches.com
SENDGRID_FROM_NAME=RealRiches

# ===========================================
# SMS & Phone Verification - Twilio
# https://www.twilio.com/docs
# ===========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_VERIFY_SID=

# ===========================================
# Smart Locks - Seam
# https://docs.seam.co
# ===========================================
SEAM_API_KEY=

# ===========================================
# Lease Guarantees - TheGuarantors
# https://www.theguarantors.com
# ===========================================
THE_GUARANTORS_API_KEY=
THE_GUARANTORS_PARTNER_ID=
THE_GUARANTORS_API_URL=https://api.theguarantors.com

# ===========================================
# AI - Anthropic Claude
# https://docs.anthropic.com
# ===========================================
ANTHROPIC_API_KEY=

# ===========================================
# iMessage - Sendblue
# https://sendblue.co/docs
# ===========================================
SENDBLUE_API_KEY=
SENDBLUE_API_SECRET=

# ===========================================
# AI Lead Follow-up - Jeeva
# https://jeeva.ai/docs
# ===========================================
JEEVA_API_KEY=

# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
LOG_LEVEL=debug
PORT=3001
