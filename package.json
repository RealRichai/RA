{
  "name": "realriches",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @realriches/api db:generate",
    "db:push": "pnpm --filter @realriches/api db:push",
    "db:seed": "pnpm --filter @realriches/api db:seed",
    "db:migrate": "pnpm --filter @realriches/api db:migrate",
    "db:studio": "pnpm --filter @realriches/api db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  }
}
