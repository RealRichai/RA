{
  "name": "realriches",
  "version": "1.0.0",
  "private": true,
  "description": "RealRiches - AI-Powered Real Estate Platform",
  "license": "UNLICENSED",
  "author": "RealRiches Team",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@realriches/api",
    "dev:web": "turbo dev --filter=@realriches/web",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:acceptance": "pnpm --filter @realriches/api test:acceptance",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report tests/e2e/reports/html",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "db:seed": "turbo db:seed",
    "db:studio": "pnpm --filter @realriches/database exec prisma studio",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "changeset": "changeset",
    "release": "turbo build && changeset publish",
    "policy:no-human-todos": "grep -rn \"HUMAN_IMPLEMENTATION_REQUIRED\" apps packages prisma docs --include=\"*.ts\" --include=\"*.tsx\" --include=\"*.js\" --exclude-dir=coverage --exclude-dir=.next --exclude-dir=dist --exclude-dir=.turbo && exit 1 || exit 0",
    "traceability:check": "node scripts/traceability_check.mjs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^25.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1",
      "esbuild": ">=0.25.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
